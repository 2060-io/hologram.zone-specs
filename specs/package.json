{
  "dependencies": {
    "spec-up": "^0.10.8"
  },
  "name": "hologram.zone-website",
  "version": "1.0",
  "description": "Hologram",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2060-io/hologram.zone-website.git"
  },
  "license": "GPL-3.0-only",
  "homepage": "https://hologram.zone",
  
  "bugs": {
    "url": "https://github.com/2060-io/hologram.zone-website/issues"
  },
  "scripts": {
    "render": "npm run build",
    "edit": "npm run dev",
    "build": "npm run clean && npm run build:specs",
    "build:specs": "node -e \"require('spec-up')({ nowatch: true })\"",
    "dev": "npm run clean && npm run dev:specs",
    "dev:specs": "node -e \"require('spec-up')()\"",
    "clean": "rm -rf build && mkdir build"
  }
}
